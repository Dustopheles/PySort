#: include src/style/colors.kv

<ToggleButton>
    background_normal: "res/bttn_pressed.png"
    background_down: "res/tab_selected.png"

<Button>
    background_normal: "res/bttn_normal.png"
    background_disabled_normal: "res/bttn_pressed.png"
    background_down: "res/bttn_pressed.png"
    background_disabled_down: "res/bttn_pressed.png"

<TabbedPanelHeader>
    background_normal: "res/bttn_normal.png"
    background_down: "res/tab_selected.png"
    bold: True

<TextInput>
    foreground_color: text_input_color 
    background_color: text_background_color
    cursor_color: text_input_color 
    multiline: False