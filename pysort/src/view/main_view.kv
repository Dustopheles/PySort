#: include src/view/visualizer_view.kv
#: include src/view/settings_view.kv

<MainView>:
    border: [0, 0, 0, 0]
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    tab_width: self.width/2
    scroll_type: ["bars"]
    canvas:
        Color:
            rgba: header_color
        Rectangle:
            size: self.size
            pos: self.pos

    TabbedPanelItem:
        text: 'EINSTELLUNGEN'
        SettingsView

    TabbedPanelItem:
        text: 'VISUALISIERER'
        VisualizerView